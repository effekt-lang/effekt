import immutable/list

interface DataBase[R] {
    //will save name to database
    def addEntry(entry: R): Unit

    //returns list of currently saved names
    def getEntries(): List[R]

    //prints all names to console
    def printEntries(): Unit
}

record Student(
    firstName: String,
    lastName: String,
    id: Int
)



