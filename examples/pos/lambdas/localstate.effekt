module examples/pos/lambdas/localstate

def main() = {
  var y = 1
  def local() = {
    var x = 0

    def count1(n: Int): Int = if (n == 0) n else count1(n - 1)

    def hof { g2 : Unit } = fun () {
      x = x + 1
      println(x + y); g2()
    }

    def g(): Int = count1(0);

    val incrementer = hof { g(); () }

    incrementer()
    incrementer()
    incrementer()
    ()
  }
  local()
}