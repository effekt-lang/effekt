def greaterFifteen() = {
  var total = 0;
  with boundary
  each(0, 100) { (i) =>
    total = total + i;
    if (total > 15) do stop()
    println(i)
  }
}

def sumPositive() = {
  var total = 0;
  each(-10, 10) { (i) =>
    with boundary
    if (i < 0) do stop()
    total = total + i
  }
  println(total)
}

def main() = {
  greaterFifteen()
  sumPositive()
}