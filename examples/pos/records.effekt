module records

record Person(name: String, id: Int)

def somePerson(): Person =
  Person("Jonathan", 1334579)

def foo(p: Person) = p.name

def show(p: Person) = "Person(" ++ show(p.name) ++ ", " ++ show(p.id) ++ ")"

def main() = {
  val x = Tuple2(1, "goo");

  println(somePerson().foo);
  println(x.first);
  println(show(somePerson()))
}
