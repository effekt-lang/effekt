import io
import io/error
import io/files

def program(path1: String, path2: String) =  {
  val f1 = promise(box {
    with on[IOError].panic;
    readFile(path1)
  })
  val f2 = promise(box {
    with on[IOError].panic;
    readFile(path2)
  })

  val results1 = await(f1)
  val results2 = await(f2)

  println(results1)
  println(results2)
}

def main() = {
  println("Running program")

  def path(file: String) = "examples/stdlib/io/files/" ++ file

  promise(box {
    program(path("demo_file1.txt"), path("demo_file2.js"))
    println("done reading files.")
  })

  println("Done")
}
