module io/time

extern llvm """
  declare void @c_timer_start(%Int, %Stack)
"""

extern async def wait(millis: Int): Unit =
  js """
    setTimeout(() => RESUME($effekt.unit), ${millis});
    return ABORT(undefined); // abort current trampoline
  """
  llvm """
    call void @c_timer_start(%Int ${millis}, %Stack %stack)
    ret void
  """
