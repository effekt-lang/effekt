interface Read[A] {
  def read(): A / Done
}

def source[A, R] { stream: () => Unit / Emit[A] } { reader: () => R / Read[A] }: R / Done = {
  var next = box { () => val x: A = do done(); return x }
  next = box { () =>
    try {
      stream()
      val x: A = do done()
      return x
    } with Emit[A] {
      def emit(v) = {
        next = box { () => resume(()) }
        return v
      }
    }
  }
  try {
    reader()
  } with Read[A] {
    def read() = {
      resume { next() }
    }
  }
}
