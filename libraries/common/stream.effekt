module stream

import bytes

interface Emit[A] {
  def emit(value: A): Unit
}

def for[A, R] { stream: () => R / Emit[A] } { action: A => Unit }: R =
  try {
    stream()
  } with Emit[A] {
    def emit(value) = resume(action(value))
  }

def for[A] { stream: () => Unit / Emit[A] } { action: A => Unit }: Unit =
  for[A, Unit]{stream}{action}

def forever[A] { action: () => A }: Nothing / Emit[A] = {
  def go(): Nothing = {
    do emit(action())
    go()
  }
  go()
}


def each[A](list: List[A]): Unit / Emit[A] =
  list match {
    case Nil() => ()
    case Cons(head, tail) =>
      do emit(head)
      each(tail)
  }

def each[A](array: Array[A]): Unit / Emit[A] = {
  val n = array.size
  def go(i: Int): Unit = {
    if (i < n) {
      do emit(array.unsafeGet(i))
      go(i + 1)
    }
  }
  go(0)
}

def each(bytes: Bytes): Unit / Emit[Byte] = {
  val n = bytes.size
  def go(i: Int): Unit = {
    if (i < n) {
      do emit(bytes.read(i))
      go(i + 1)
    }
  }
  go(0)
}

