interface Done {
  def done(): Nothing
}

def boundary[R] { program: () => R / Done }: Option[R] =
  try {
    Some(program())
  } with Done {
    def done() = None()
  }


record Indexed[A](index: Int, value: A)

// In Effekt lower bounds are inclusive and upper bounds are exclusive

def range(lower: Int, upper: Int): Unit / Emit[Int] =
  if (lower < upper) {
    do emit(lower)
    range(lower + 1, upper)
  }

def rangeTo(upper: Int): Unit / Emit[Int] =
  range(0, upper)

def rangeFrom(lower: Int): Unit / Emit[Int] = {
  do emit(lower)
  rangeFrom(lower + 1)
}


def index[A, R] { stream: () => R / Emit[A] }: R / Emit[Indexed[A]] = {
  var i = 0;
  try {
    stream()
  } with Emit[A] {
    def emit(v) = {
      val c = i;
      i = c + 1;
      resume(do emit(Indexed(c, v)))
    }
  }
}


def take[A, R](number: Int) { stream: () => R / Emit[A] }: R / { Emit[A], Done } = {
  var i = 0;
  try {
    stream()
  } with Emit[A] {
    def emit(v) = {
      val c = i;
      if (c < number) {
        i = c + 1;
        resume(do emit(v))
      } else {
        do done()
      }
    }
  }
}


// If `number` is zero or negative it does nothing (like `stream::take`)
def repeat[A](number: Int) { action: () => A }: Unit / Emit[A] =
  if (number > 0) {
    do emit(action())
    repeat(number - 1) {action}
  }


def sum[R] { stream : () => R / Emit[Int] }: (R, Int) = {
  var s = 0;
  try {
    (stream(), s)
  } with Emit[Int] {
    def emit(v) = {
      s = s + v;
      resume(())
    }
  }
}

def sum { stream : () => Unit / Emit[Int] }: Int =
  sum[Unit]{stream}.second

def gatherList[A, R] { stream: () => R / Emit[A] }: (R, List[A]) =
  try {
    (stream(), Nil())
  } with Emit[A] {
    def emit(v) = {
      val (r, vs) = resume(());
      (r, Cons(v, vs))
    }
  }

def gatherList[A] { stream: () => Unit / Emit[A] }: List[A] =
  gatherList[A, Unit]{stream}.second

def gatherArray[A, R] { stream: () => R / Emit[A] }: (R, Array[A]) = {
  var i = 0
  var a = allocate(1)
  try {
    (stream(), a.resize(i))
  } with Emit[A] {
    def emit(v) = {
      val c = i;
      if (c >= a.size) { a = a.resize(2 * a.size) }
      a.unsafeSet(c, v)
      i = c + 1
      resume(())
    }
  }
}

def gatherArray[A] { stream: () => Unit / Emit[A] }: Array[A] =
  gatherArray[A, Unit]{stream}.second

def gatherArraySize[A, R](number: Int) { stream: () => R / Emit[A] }: (Option[R], Array[A]) = {
  var i = 0;
  val a = allocate(number);
  val r = try {
    Some(stream())
  } with Emit[A] {
    def emit(v) = {
      val c = i;
      if (c < number) {
        a.unsafeSet(c, v)
        i = c + 1
        resume(())
      } else {
        None()
      }
    }
  }
  if (i < a.size) {
    (r, a.resize(i))
  } else {
    (r, a)
  }
}

def gatherArraySize[A](number: Int) { stream: () => Unit / Emit[A] }: Array[A] =
  gatherArraySize[A, Unit](number){stream}.second

